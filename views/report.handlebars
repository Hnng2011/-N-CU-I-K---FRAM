<div class="container mt-4">
    <h2>Report Form for Surfaces {{id}}</h2>
    <form action="/addReport/{{id}}" method="post">
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" name="address" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" id="phone" name="phone" required>
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
        </div>
        <div class="mb-3">
            <label for="report_date" class="form-label">Report Date</label>
            <input type="date" class="form-control" id="report_date" name="report_date" required>
        </div>
        <input type="hidden" name="surface" value="{{id}}">
        <input type="hidden" name="state" value="1">
        <!-- Giá trị mặc định cho long và lat -->
        <input type="hidden" name="long" value="0.0">
        <input type="hidden" name="lat" value="0.0">

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<div class="container mt-5 mb-5">
    <h3>Report History</h3>
    <div class="row">
        {{#each report}}
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{address}}</h5>
                    <p class="card-text"><strong>Email:</strong> {{email}}</p>
                    <p class="card-text"><strong>Phone:</strong> {{phone}}</p>
                    <p class="card-text"><strong>Content:</strong> {{content}}</p>
                    <p class="card-text"><strong>Report Date:</strong> {{report_date}}</p>
                    <p class="card-text">State: <span
                            class="btn  {{#if (eq state 1)}}btn-warning{{else if (eq state 2)}}btn-danger{{/if}}">
                            {{#if (eq state 1)}}Đang xử lí{{else if (eq state 2)}}Đã xử lí xong{{/if}}
                        </span></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    Handlebars.registerHelper('eq', function (a, b) {
        return a === b;
    });
</script>